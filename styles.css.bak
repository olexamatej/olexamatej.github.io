/* css styles */

@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&family=Fira+Code&display=swap');

body {
  font-family: 'Inter', sans-serif;
  font-weight: 300;
  color: #333;
}

h1, h2, h3, h4, h5, h6 {
  font-weight: 600;
  color: #111;
}

a {
  color: #007bff;
  text-decoration: none;
  transition: color 0.2s ease;
}

a:hover {
  color: #0056b3;
  text-decoration: none;
}

.about-link {
  color: #555 !important;
}

.about-link:hover {
  color: #000 !important;
}
